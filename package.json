{
  "name": "padelyzer-platform",
  "version": "2.0.0",
  "private": true,
  "description": "Padelyzer Platform - Arquitectura Dual B2C/B2B - V2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:player": "npm run dev --workspace=@padelyzer/web-player",
    "dev:club": "npm run dev --workspace=@padelyzer/web-club",
    "dev:router": "npm run dev --workspace=@padelyzer/router",
  "build:player": "npm run build --workspace=@padelyzer/web-player"
  },
  "devDependencies": {
    "turbo": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0"
}